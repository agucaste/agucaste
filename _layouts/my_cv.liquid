---
layout: default
title: "Download PDF"
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
  </header>

  <article>
    <div class="pdf-link">
      {% if page.cv_pdf %}
        <p>
          <a
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="pdf-link-text"
          >
            Download {{ page.cv_pdf | split: '/' | last }}
          </a>
        </p>
      {% else %}
        <p>No PDF available.</p>
      {% endif %}
    </div>
  </article>
</div>
